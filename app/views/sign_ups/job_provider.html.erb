<!-- Payment Process -->
<div class="process-box blue-background min-height text-white">
  <h1 class="features-heading text-white">Paying Staff</h1>
  <div class="row">
    <div class="col-sm-12 col-md-4 d-flex flex-column align-items-center py-5 px-4">
      <div class="py-5">
        <i class="far fa-credit-card fa-5x green-text"></i>
      </div>
      <h1 class="text-white text-center">Add Card</h1>
      <p class="perks-text" style="text-align:center;">Add your business debit or credit card to your Template account so you can accept share shifts and accept applications to work those shifts</p>
    </div>
    <div class="col-sm-12 col-md-4 d-flex flex-column align-items-center py-5 px-4">
      <div class="py-5">
        <i class="fas fa-user-check fa-5x green-text"></i>
      </div>
      <h1 class="text-white text-center">Accept Applicant</h1>
      <p class="perks-text" style="text-align:center;">When you accept your favourite applicant a block is placed on your card to cover their pay for that individual shift</p>
    </div>
    <div class="col-sm-12 col-md-4 d-flex flex-column align-items-center py-5 px-4">
      <div class="py-5">
        <i class="fas fa-briefcase fa-5x green-text"></i>
      </div>
      <h1 class="text-white text-center">Confirm Completion</h1>
      <p class="perks-text" style="text-align:center;">Once you have confirmed that the shift has been completed the money is sent straight to the worker's account</p>
    </div>
  </div>
  <br>
</div>


<!-- Sign Up -->
<div class="d-flex flex-column justify-content-around bottom-banner">
  <div>
    <h1 class="sign-up-heading">Sign Up</h1>
    <div class="p-3 text-center">
      <div class="clickable w-50 btn btn-sign-up" data-toggle="modal" data-target="#signup_form">Sign Up</div>
    </div>
  </div>
  <%= render 'sign_ups/shared/sign_up_modal_form', sign_up: @sign_up %>
  <br>
  <br>
  <br>
</div>


