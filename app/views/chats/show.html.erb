<% page = "" %>

<div class="wrapper">
  <% if current_user.employer %>
    <%= render 'pages/shared/employer_dashboard_sidebar', page: page %>
  <% else %>
    <%= render 'pages/shared/employee_dashboard_sidebar', page: page %>
  <% end %>

  <div class="container pt-3">
    <nav class="navbar navbar-expand-lg navbar-light">
      <div class="container-fluid">
        <%= link_to "", inbox_path, class: "btn btn-primary fas fa-arrow-left" %>

      </div>
    </nav>
    <%#= link_to 'Back', current_user.employer ? dashboard_employer_path(@current_user) : dashboard_path, class: "mt-3 btn btn-ghost"  %>
    <%= render "chats/chat-window", chat: @chat %>
  </div>
</div>
