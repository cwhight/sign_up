<div class="p-3 m-2">

  <h2><%= user.first_name %>'s Reviews</h2>
  <% if user.reviews.any? %>
    <% user.reviews.each do |review| %>
    <div class="shadow-sm p-3">
      <div class="border-bottom d-flex justify-content-between align-items-center">
        <div class="">
          <h6><%= "#{review.reviewer.first_name}, #{review.shift.job.title}" %> - <%= review.title %></h6>

        </div>
        <div>

          <h6><span ><% review.score.round.times do %><i class="star fas fa-star"></i><% end %></h6>

        </div>

      </div>


      <p class="pt-3"><strong><em><%= review.content %></em></strong></p>
    </div>
    <% end %>
  <% else %>
    <p>No reviews yet</p>
  <% end %>
</div>

