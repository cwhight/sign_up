<% page = "reviews" %>

<div class="wrapper">
  <% if current_user.employer %>
    <%= render 'pages/shared/employer_dashboard_sidebar', page: page %>
  <% else %>
    <%= render 'pages/shared/employee_dashboard_sidebar', page: page %>
  <% end %>
  <div class="container">
    <div class="reviews profile-card card p-3 m-2">

      <h2><%= current_user.first_name %>'s Reviews</h2>
      <% if current_user.reviews.any? %>
        <% current_user.reviews.each do |review| %>
        <div class="shadow-sm p-3">
          <div class="d-flex justify-content-between align-items-center">
            <div class="">
              <h6><%= review.title %></h6>

            </div>
            <h6><span ><% review.score.round.times do %><i class="star fas fa-star"></i><% end %></h6>

          </div>
          <p><%= review.shift.job.title %></p>

          <p><%= review.content %></p>
        </div>
        <% end %>
      <% else %>
        <p>No reviews yet</p>
      <% end %>
    </div>

  </div>
</div>

