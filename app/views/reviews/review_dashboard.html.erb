<% page = "reviews" %>

<div class="wrapper">
  <% if current_user.employer %>
    <%= render 'pages/shared/employer_dashboard_sidebar', page: page %>
  <% else %>
    <%= render 'pages/shared/employee_dashboard_sidebar', page: page %>
  <% end %>
  <div class="cont pt-3">
    <h2 class="py-2">Welcome to Your Review Dashboard</h2>

    <div class="row">
      <div class="col-lg-6 col-12">

        <h3><%= current_user.first_name %>'s Reviews</h3>
        <div class="reviews profile-card card p-3 m-2">

          <% if current_user.reviews.any? %>
            <% current_user.reviews.each do |review| %>
            <div class="shadow-sm p-3">
              <div class="d-flex justify-content-between align-items-center">
                <div class="">
                  <h6><%= review.title %></h6>

                </div>
                <h6><span ><% review.score.round.times do %><i class="star fas fa-star"></i><% end %></h6>

              </div>
              <p><%= review.shift.job.title %></p>

              <p><%= review.content %></p>
            </div>
            <% end %>
          <% else %>
            <p>No reviews yet</p>
          <% end %>
        </div>
      </div>
      <div class="col-lg-6 col-12">
        <h3 class="pt-3">Oustanding Reviews</h3>
      </div>
    </div>

  </div>
</div>

